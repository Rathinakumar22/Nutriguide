<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#7B1FA2"/> <!-- Darker violet when pressed -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#9C27B0"/> <!-- Regular violet -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
